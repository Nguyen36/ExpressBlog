<div class="breadcrumb-item"><a href="/">Home</a></div>
<div clas="w-30 h-30" style="
margin: 0 auto;
height: 200px;
width:600px
">
  <form method="POST" action="/create">
    <div class="form-group">
      <label for="floatingInput">Blog title</label>
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Title"
        name="title"
        required
      />
    </div>
  
    <div class="form-group">
      <label for="content">Content</label>
      <textarea
        name="content"
        class="form-control"
        id="content"
        rows="20"
        required
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary" onclick="myFunction()">Submit</button>
  </form>
</div>

<script>
  function myFunction() { window.location.href = 'home.hbs'; }
</script>