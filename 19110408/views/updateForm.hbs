">
<form method="POST" action="/blog/{{blog.id}}/update">
  <div class="form-group">
    <label for="floatingInput">Blog title</label>
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="First Name"
      name="title"
      value="{{blog.title}}"
      required
    />
  </div>

  <div class="form-group">
    <label for="content">Ná»™i dung</label>
    <textarea
      name="content"
      class="form-control"
      id="content"
      rows="20"
      required
    >{{blog.content}}</textarea>
  </div>
  <button
    type="submit"
    class="btn btn-primary"
    onclick="myFunction()"
  >Submit</button>
</form>
</div>
